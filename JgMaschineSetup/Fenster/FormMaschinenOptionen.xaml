<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:xData="clr-namespace:JgMaschineData;assembly=JgDataMaschineData"
    xmlns:vRules="clr-namespace:JgMaschineSetup.ValidationRules"
    mc:Ignorable="d" x:Class="JgMaschineSetup.FormMaschinenOptionen"
    Title="Maschinen Optionen" Height="371.16" Width="615.795" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" 
        ShowInTaskbar="False" Icon="/JgMaschineSetup;component/JgSettings.ico" ResizeMode="NoResize" FocusManager.FocusedElement="{Binding ElementName=cmbStandort}">
    <Window.Resources>

    </Window.Resources>

    <Grid Name="gridMaschine" Margin="7" DataContext="{x:Type xData:tabMaschine}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>
        <Label Content="_Standort" Target="{Binding ElementName=cmbStandort}" Style="{StaticResource ResourceKey=StyleLabel}"/>
        <ComboBox Name="cmbStandort" SelectedValue="{Binding fStandort}" DisplayMemberPath="Bezeichnung" SelectedValuePath="Id" Margin="3" Grid.Column="1" Grid.ColumnSpan="3" ToolTip="Standort zur Unterteilung der Maschinen in verschiedene Bereiche"/>

        <Label Content="_Maschinenname" Target="{Binding ElementName=tbMaschinenName}" Style="{StaticResource ResourceKey=StyleLabel}" Grid.Row="1"/>
        <TextBox x:Name="tbMaschinenName" Style="{StaticResource StyleTextBox}" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" ToolTip="Einen eindeutigen Namen, mit dem die Maschine zuordenbar ist.">
            <Binding Path="MaschinenName" UpdateSourceTrigger="PropertyChanged">
                <Binding.ValidationRules>
                    <vRules:KontrFeldNichtLeer/>
                </Binding.ValidationRules>
            </Binding>
        </TextBox>

        <Label Content="_Protokoll Maschine" Target="{Binding ElementName=cmbProtokolle}" Style="{StaticResource ResourceKey=StyleLabel}" Grid.Row="2"/>
        <ComboBox Name="cmbProtokolle" Margin="3" SelectedItem="{Binding ProtokollName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" ToolTip="Das Protokoll, mit welchem das Programm das Programm in der Maschine die Daten abfragt."/>

        <Label Content="_Maschinenadresse" Target="{Binding ElementName=tbMaschinenAdresse}" Style="{StaticResource ResourceKey=StyleLabel}" Grid.Row="3"/>
        <TextBox x:Name="tbMaschinenAdresse" Style="{StaticResource StyleTextBox}" Text="{Binding MaschinenAdresse}" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" />

        <Label Content="_Portnummer" Target="{Binding ElementName=tbPortnummer}" Style="{StaticResource ResourceKey=StyleLabel}" Grid.Row="4"/>
        <TextBox x:Name="tbPortnummer" Style="{StaticResource StyleTextBox}" Text="{Binding PortNummer}" Grid.Column="1" Grid.Row="4" />

        <Label Content="_Scannernummer" Target="{Binding ElementName=tbScannernummer}" Style="{StaticResource ResourceKey=StyleLabel}" Grid.Row="5"/>
        <TextBox x:Name="tbScannernummer" Style="{StaticResource StyleTextBox}" Text="{Binding ScannerNummer}" Grid.Column="1" Grid.Row="5" />

        <Label Content="_Pfad zu Daten" Target="{Binding ElementName=tbPfadDaten}" Style="{StaticResource ResourceKey=StyleLabel}" Grid.Row="6"/>
        <TextBox Name="tbPfadDaten" Text="{Binding PfadDaten}" Style="{StaticResource StyleTextBox}" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="3" />
        <Button Name="btnDateiDaten"  Grid.Column="4" Margin="3" Grid.Row="6" Click="ButtonPfad_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <StackPanel Orientation="Horizontal">
                <Image Source="..\Bilder\JgOpen.ico" Height="15"/>
                <TextBlock Text="Pfad" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Label Content="Pfad zu _Benutzer" Target="{Binding ElementName=tbPfadBediener}" Style="{StaticResource ResourceKey=StyleLabel}" Grid.Row="7"/>
        <TextBox x:Name="tbPfadBediener" Text="{Binding PfadBediener}"  Style="{StaticResource StyleTextBox}" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="3" />
        <Button x:Name="btnDateiBediener" Grid.Column="4" Margin="3" Grid.Row="7" Click="ButtonPfad_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <StackPanel Orientation="Horizontal">
                <Image Source="..\Bilder\JgOpen.ico" Height="15"/>
                <TextBlock Text="Pfad" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <Label Content="_Vorgabe pro Stunde" Target="{Binding ElementName=tbVorgabeProStunde}" Style="{StaticResource ResourceKey=StyleLabel}" Grid.Row="8"/>
        <TextBox x:Name="tbVorgabeProStunde" Style="{StaticResource StyleTextBox}" Text="{Binding VorgabeProStunde}" Grid.Column="1" Grid.Row="8" />

        <Label Content="S_tatus Maschine" Target="{Binding ElementName=cmbStatus}"  Style="{StaticResource ResourceKey=StyleLabel}" Grid.Row="9"/>
        <ComboBox Name="cmbStatus" Margin="3" SelectedItem="{Binding Status}"  Grid.Column="1" Grid.Row="9"/>

        <Button Grid.Column="2" Grid.Row="11" Style="{StaticResource StyleButton}" IsCancel="True">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <StackPanel Orientation="Horizontal">
                <Image Source="..\Bilder\JgCancel.ico" Margin="5">
                    <Image.Effect>
                        <DropShadowEffect/>
                    </Image.Effect>
                </Image>
                <TextBlock Text="Abbrechen" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button Grid.ColumnSpan="2" Grid.Column="3" Grid.Row="11" Style="{StaticResource StyleButton}" IsDefault="True" Click="ButtonOk_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <StackPanel Orientation="Horizontal">
                <Image Source="..\Bilder\JgCheck.ico" Margin="5">
                    <Image.Effect>
                        <DropShadowEffect/>
                    </Image.Effect>
                </Image>
                <TextBlock Text="Eintragen" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

    </Grid>
</Window>
