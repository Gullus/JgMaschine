                    <TextBox Text="{Binding Source={StaticResource AuswertungKumulativ}, Path=UeberstundenBezahltString, Mode=OneWay}" TextAlignment="Center" Grid.Column="7" Grid.Row="4" Margin="3"/>
                    <Label Content="Auszahlg." Grid.Column="6" Grid.Row="5" />
                    <TextBox Text="{Binding Path=eArbeitszeitHelper.AuszahlungUeberstundenAnzeige}" TextAlignment="Center" Grid.Column="7" Grid.Row="5" Margin="3"/>
