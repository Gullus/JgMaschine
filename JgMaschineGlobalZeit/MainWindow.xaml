                    <Label Content="Soll" Grid.Column="3" Grid.Row="4"/>
                    <TextBox Text="{Binding Source={StaticResource AuswertungMonat}, Path=SollStundenString, Mode=OneWay}" TextAlignment="Center" Grid.Column="4" Grid.Row="4" Margin="3"/>
                    <Button Content="..." Grid.Column="5" Grid.Row="4" Margin="3,3,8,3" Click="btnSollStundenEinstellen_Click" ToolTip="Sollstunde enstellen"/>
                    <Label Content="Ist" Grid.Column="3" Grid.Row="5"/>
                    <TextBox Text="{Binding Source={StaticResource AuswertungMonat}, Path=IstStundenString, Mode=OneWay}" TextAlignment="Center" Grid.Column="4" Grid.Row="5" Margin="3"/>
                    <Label Content="Diff." Grid.Column="3" Grid.Row="6"/>
                    <TextBox Text="{Binding Source={StaticResource AuswertungMonat}, Path=UeberstundenString, Mode=OneWay}" TextAlignment="Center" Grid.Column="4" Grid.Row="6" Margin="3" BorderBrush="Blue"/>

                    <TextBlock Text="Zuschläge" Grid.Column="19" Grid.ColumnSpan="2" Grid.Row="3" FontWeight="Bold" TextAlignment="Center" Margin="5" />
                    <Label Content="Nachtschicht" Grid.Column="19" Grid.Row="4"/>
                    <TextBox Text="{Binding Source={StaticResource AuswertungMonat}, Path=NachtschichtenString, Mode=OneWay}" TextAlignment="Center" Grid.Column="20" Grid.Row="4" Margin="3"/>
                    <Label Content="Feiertage" Grid.Column="19" Grid.Row="5"/>
                    <TextBox Text="{Binding Source={StaticResource AuswertungMonat}, Path=FeiertageString, Mode=OneWay}" TextAlignment="Center" Grid.Column="20" Grid.Row="5" Margin="3"/>

                    <Button Content="Optionen" Grid.Column="23" Grid.Row="4" Click="btnOptionen_Click"/>

                    <Grid Grid.Row="8" Grid.Column="3" Grid.ColumnSpan="25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Auswertung" Height="28" VerticalAlignment="Bottom" />
                        <ComboBox ItemsSource="{Binding Source={StaticResource vsAuswertungAuswertung}}" DisplayMemberPath="AnzeigeReportname" Grid.Column="1"/>
                        <Button Click="btnDrucken_Click" Grid.Column="2" Tag="0" ToolTip="Reportname ändern">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Bilder\JgSettings.ico" Height="14"/>
                            </StackPanel>
                        </Button>
                        <Button Click="btnDrucken_Click" Grid.Column="3" Tag="1" ToolTip="Report anzeigen">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Bilder\JgTextDocument.ico" Height="14"/>
                                <TextBlock Text=" Anzeigen" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Click="btnDrucken_Click" Grid.Column="4" Tag="2" ToolTip="Report drucken">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Bilder\JgPrint.ico" Height="14"/>
                                <TextBlock Text=" Drucken" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Click="btnDrucken_Click" Grid.Column="5" Tag="3" ToolTip="Report bearbeiten">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Bilder\JgEdit.ico" Height="14"/>
                                <TextBlock Text=" Bearbeiten" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Click="btnDrucken_Click" Grid.Column="6" Tag="4" ToolTip="Neuen Report erstellen">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Bilder\JgNew.ico" Height="14"/>
                                <TextBlock Text=" Neuer Rep." VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Content="Export" Click="btnDrucken_Click" Grid.Column="7" Tag="5" ToolTip="Report eeportieren" />
                        <Button Content="Löschen" Click="btnDrucken_Click" Grid.Column="8" Tag="6" ToolTip="Report löschen" />
                    </Grid>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
