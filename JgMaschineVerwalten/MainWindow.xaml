                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                  </Grid.ColumnDefinitions>

                  <Label Content="Anzahl Coils" />
                  <TextBox Grid.Column="1" Text="{Binding CoilwechselAnzahl}" Style="{DynamicResource StyleTextBoxReadOnly}"/>
                  <Label Content="Bediener" Grid.Column="2" />
                  <TextBox Text="{Binding Bediener}" Grid.Column="3" Style="{DynamicResource StyleTextBoxReadOnly}" />

