        <TreeView x:Name="treeViewMaschinen" Margin="6" Grid.Row="1" ItemsSource="{Binding}" SelectedValuePath="Id">

            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="True"/>
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.Resources>

                <Style x:Key="styleIstReparatur" TargetType="StackPanel">
                    <Setter Property="StackPanel.Background" Value="Transparent" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IstReparatur}" Value="True">
                            <Setter Property="StackPanel.Background" Value="Salmon" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>

                <HierarchicalDataTemplate DataType="{x:Type data:tabMaschine}" ItemsSource="{Binding sAktiveAnmeldungen}">
                    <StackPanel Orientation="Horizontal" Width="210" Style="{StaticResource styleIstReparatur}" >
                        <Image Source="Bilder\JgSettings.ico" Margin="5" Width="30" />
                        <TextBlock Text="{Binding MaschinenName}" FontSize="16" FontWeight="Bold" Margin="0, 10, 0, 8" />
                        <TextBlock Text=" [" Foreground="Blue" />
