            <TabItem Header=" Anmeldung " Width="100"  Height="50">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="140"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="_Matchcode" />
                    <TextBox x:Name="MatchCoode" Grid.Column="1" Margin="3"/>

                    <Label Content="Name" Grid.Row="1" />
                    <ComboBox x:Name="cmbAnmeldung" Grid.Column="1" Grid.Row="1" DisplayMemberPath="Name" SelectedValuePath="Id" />
                    <Button Content="Anmelden" Command="{x:Static comands:MyCommands.ManuelleAnmeldungBediener}" Grid.Column="2" Grid.Row="1" Margin="3" />

                    <Button Grid.Column="4" Grid.RowSpan="2" Margin="5" Click="btnTabellenAktualisieren_Click" >
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="C:\Entwicklung\JgMaschine\JgMaschineLib\Bilder\JgRefresh.ico" Margin="5" Height="30">
                                <Image.Effect>
                                    <DropShadowEffect/>
                                </Image.Effect>
                            </Image>
                            <TextBlock Text="Tabellen aktualisieren" VerticalAlignment="Center" TextWrapping="Wrap" Width="100"/>
                        </StackPanel>
                    </Button>

                    <Label Content="Anmeldungen" Grid.Row="2"/>
                    <DataGrid x:Name="dgAnmeldungen" IsReadOnly="True" Grid.ColumnSpan="4" ItemsSource="{Binding Source={StaticResource vsAnmeldung}}" Margin="3" Grid.Row="2" Grid.Column="1" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding eBediener.Name}" Header="Bediener" Width="2*" MinWidth="120"/>
                            <DataGridTextColumn Binding="{Binding Anmeldung, StringFormat={}{0:dd.MM.yy HH:mm} }" Header="Anmeldung" Width="90" MinWidth="90"/>
                            <DataGridTextColumn Binding="{Binding Ummeldung, StringFormat={}{0:dd.MM.yy HH:mm} }" Header="Ummeldung" Width="90" MinWidth="90"/>
                            <DataGridTextColumn Binding="{Binding eMaschine.MaschinenName}" Header="Maschine" Width="*" MinWidth="100"/>

                            <DataGridTemplateColumn Header="Ummeldung" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{x:Static comands:MyCommands.BedienerUmmelden}" Content="ummelden" Margin="1"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Abmeldung" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{x:Static comands:MyCommands.ManuelleAbmeldungBediener}" Content="abmelden" Margin="1"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>

                    <Label Content="_Ummeldungen" Target="{Binding ElementName=dgUmmeldungen}" Grid.Row="3" />
                    <DataGrid x:Name="dgUmmeldungen" IsReadOnly="True" ItemsSource="{Binding Source={StaticResource vsUmmeldung}}" Margin="3" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Anmeldung , StringFormat={}{0:dd.MM.yy HH:mm}}" Header="Anmeldung" Width="90"/>
                            <DataGridTextColumn Binding="{Binding Ummeldung , StringFormat={}{0:dd.MM.yy HH:mm}}" Header="Ummeldung" Width="90"/>
                            <DataGridTextColumn Binding="{Binding eMaschine.MaschinenName}" Header="Maschine" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header=" Reparaturen " Width="100" Height="50">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="150" />
                    </Grid.RowDefinitions>

                    <Button Margin="5" Command="{x:Static comands:MyCommands.ReparaturNeu}">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="C:\Entwicklung\JgMaschine\JgMaschineLib\Bilder\JgNew.ico" Margin="5">
                                <Image.Effect>
                                    <DropShadowEffect/>
                                </Image.Effect>
                            </Image>
                            <TextBlock Text="Neue Reparatur" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="1" Margin="5" Command="{x:Static comands:MyCommands.ReparaturBearbeiten}">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="C:\Entwicklung\JgMaschine\JgMaschineLib\Bilder\Jgedit.ico" Margin="5">
                                <Image.Effect>
                                    <DropShadowEffect/>
                                </Image.Effect>
                            </Image>
                            <TextBlock Text="Rep. bearbeiten" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <DataGrid x:Name="gridReparatur" Grid.Row="1" Margin="5" ItemsSource="{Binding Source={StaticResource vsReparatur}}" Grid.ColumnSpan="3" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="90" Header="Reparatur Von" Binding="{Binding ReparaturVon, Mode=TwoWay, StringFormat={}{0:dd.MM.yy HH:mm} }" />
                            <DataGridTextColumn Width="90" Header="Reparatur Bis" Binding="{Binding ReparaturBis, StringFormat={}{0:dd.MM.yy HH:mm} }" />
                            <DataGridTextColumn Width="110" Header="Ereigniss" Binding="{Binding Ereigniss}"/>
                            <DataGridTextColumn Width="*" Header="Protokollant" Binding="{Binding eProtokollant.Name}"/>
                            <DataGridTextColumn Width="*" Header="Verursacher" Binding="{Binding eVerursacher.Name}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Label Content="Protokolltext" Margin="3,0,3,0"  Grid.Row="2"/>
                    <TextBox IsReadOnly="True" Margin="5" Grid.Row="3" Grid.ColumnSpan="3" Text="{Binding Source={StaticResource vsReparatur}, Path=ProtokollText}" />

                </Grid>
            </TabItem>

            <TabItem Header=" Optionen " Width="100" Height="30">
                <Grid Margin="7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Button x:Name="btnOptionen" Content="Optionen" Click="ButtonOptionen_Click" >
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>