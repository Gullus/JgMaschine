                                <Button Command="{x:Static comands:MyCommands.AnmeldungBediener}" Grid.Column="2">
                                    <Button.Effect>
                                        <DropShadowEffect Color="Silver"/>
                                    </Button.Effect>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Bilder\JgAdd.ico" Height="16"/>
                                        <TextBlock Text=" Mitarbeiter an Maschine anmelden" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Click="TabelleAktualisieren_Click" Grid.Column="4" Tag="2">
                                    <Button.Effect>
                                        <DropShadowEffect Color="Silver"/>
                                    </Button.Effect>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="Bilder\JgSynchronize.ico" Height="14"/>
                                        <TextBlock Text=" syncron." VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <DataGrid x:Name="dgAnmeldungAktuell" IsReadOnly="True" Grid.ColumnSpan="5" ItemsSource="{Binding Source={StaticResource vsAnmeldungAktuell}}" Grid.Row="2" >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding eBediener.Name}" Header="Angemeldete Bediener" Width="*" MinWidth="120"/>
                                        <DataGridTextColumn Binding="{Binding eMaschine.MaschinenName}" Header="an Maschine" Width="*" MinWidth="120"/>
                                        <DataGridTextColumn Binding="{Binding Anmeldung, StringFormat={}{0:dd.MM.yy HH:mm} }" Header="Anmeldung" Width="90" MinWidth="90" CellStyle="{DynamicResource CellRightCenter}"/>

                                        <DataGridTemplateColumn Header="Abmelden" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Margin="1" Click="AnmeldungBenutzerAbmelden_Click" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <TabItem Header=" Auswahl Anmeldungen  ">
                            <TabItem.Effect>
                                <DropShadowEffect Color="Silver"/>
                            </TabItem.Effect>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
