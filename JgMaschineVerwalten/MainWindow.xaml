    <TreeView x:Name="treeViewMaschinen" Margin="6" Grid.Row="1" ItemsSource="{Binding}" SelectedValuePath="Id">

      <TreeView.ItemContainerStyle>
        <Style TargetType="{x:Type TreeViewItem}">
          <Setter Property="IsExpanded" Value="True"/>
        </Style>
      </TreeView.ItemContainerStyle>

      <TreeView.Resources>
        <HierarchicalDataTemplate DataType="{x:Type data:tabMaschine}" ItemsSource="{Binding sAktuelleBediener}">
          <StackPanel Orientation="Horizontal">
            <Image Source="Bilder\JgSettings.ico" Margin="5" Width="30" />
            <TextBlock Text="{Binding MaschinenName}" FontSize="16" FontWeight="Bold" Margin="0, 10, 0, 0" />
            <TextBlock Text=" [" Foreground="Blue" />
            <TextBlock Text="{Binding sAktuelleBediener.Count}" Foreground="Blue" />
            <TextBlock Text="]" Foreground="Blue" />
          </StackPanel>
        </HierarchicalDataTemplate>
        <DataTemplate DataType="{x:Type data:tabBediener}">
          <StackPanel Orientation="Horizontal" Margin="1">
