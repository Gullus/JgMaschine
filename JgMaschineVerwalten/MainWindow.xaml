                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <DataTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding IstAktiv}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed" />
