                    </Grid.RowDefinitions>
                    <Label Content="Auswahl vom"/>
                    <DatePicker Grid.Column="1" SelectedDate="{Binding Source={StaticResource dzBauteilVon}, Path=Datum}"/>
                    <Label Content="S" Grid.Column="2" FontWeight="Normal" FontStyle="Italic"/>
                    <ComboBox Grid.Column="3" SelectedValue="{Binding Source={StaticResource dzBauteilVon}, Path=Stunde}" ItemsSource="{Binding Source={StaticResource dzArbeitszeitVon}, Path=VorgabeStunden}" ItemStringFormat="{}{0:D2}"/>
                    <Label Content="M" Grid.Column="4" FontWeight="Normal" FontStyle="Italic"/>
                    <ComboBox Grid.Column="5" SelectedValue="{Binding Source={StaticResource dzBauteilVon}, Path=Minute}" ItemsSource="{Binding Source={StaticResource dzArbeitszeitVon}, Path=VorgabeMinuten}" ItemStringFormat="{}{0:D2}"/>

                    <Label Content="Bis" Grid.Column="6" />
