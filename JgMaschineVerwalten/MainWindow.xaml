                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Label Content="Auswahl vom"/>
                                <DatePicker Grid.Column="1" SelectedDate="{Binding Source={StaticResource dzAnmeldungVon}, Path=Datum}"/>
                                <Label Content="S" Grid.Column="2" FontWeight="Normal" FontStyle="Italic"/>
                                <ComboBox Grid.Column="3" SelectedValue="{Binding Source={StaticResource dzAnmeldungVon}, Path=Stunde}" ItemsSource="{Binding Source={StaticResource dzArbeitszeitVon}, Path=VorgabeStunden}" ItemStringFormat="{}{0:D2}"/>
                                <Label Content="M" Grid.Column="4" FontWeight="Normal" FontStyle="Italic"/>
                                <ComboBox Grid.Column="5" SelectedValue="{Binding Source={StaticResource dzAnmeldungVon}, Path=Minute}" ItemsSource="{Binding Source={StaticResource dzArbeitszeitVon}, Path=VorgabeMinuten}" ItemStringFormat="{}{0:D2}"/>

                                <Label Content="bis" Grid.Column="6" />
                                <DatePicker Grid.Column="7" SelectedDate="{Binding Source={StaticResource dzAnmeldungBis}, Path=Datum}" />
                                <Label Content="S" Grid.Column="8" FontWeight="Normal" FontStyle="Italic"/>
                                <ComboBox Grid.Column="9" SelectedValue="{Binding Source={StaticResource dzAnmeldungBis}, Path=Stunde}" ItemsSource="{Binding Source={StaticResource dzArbeitszeitBis}, Path=VorgabeStunden}" ItemStringFormat="{}{0:D2}"/>
                                <Label Content="M" Grid.Column="10" FontWeight="Normal" FontStyle="Italic"/>
                                <ComboBox Grid.Column="11" SelectedValue="{Binding Source={StaticResource dzAnmeldungBis}, Path=Minute}" ItemsSource="{Binding Source={StaticResource dzArbeitszeitBis}, Path=VorgabeMinuten}" ItemStringFormat="{}{0:D2}"/>

                                <Button x:Name="btnAnmeldungAuswahl" Grid.Column="12" Click="btnAuswahlAktualisieren_Click" >
                                    <Button.Effect>
                                        <DropShadowEffect Color="Silver"/>
                                    </Button.Effect>
                                    <StackPanel Orientation="Horizontal" >
                                        <Image Source="Bilder\JgRefresh.ico" Height="16" />
                                        <TextBlock Text=" aktualisieren" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>

                                <DataGrid x:Name="dgAnmeldungAuswahl" IsReadOnly="True" ItemsSource="{Binding Source={StaticResource vsAnmeldungAuswahl}}" Grid.Row="2" Grid.ColumnSpan="15" >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding eBediener.Name}" Header="Bediener" Width="*" MinWidth="120"/>
                                        <DataGridTextColumn Binding="{Binding eMaschine.MaschinenName}" Header="an Maschine" Width="*" MinWidth="120"/>
                                        <DataGridTextColumn Binding="{Binding Anmeldung, StringFormat={}{0:dd.MM.yy HH:mm} }" Header="Anmeldung" Width="90" MinWidth="90" CellStyle="{DynamicResource CellRightCenter}"/>
                                        <DataGridTextColumn Binding="{Binding Abmeldung, StringFormat={}{0:dd.MM.yy HH:mm} }" Header="Abmeldung" Width="90" MinWidth="90" CellStyle="{DynamicResource CellRightCenter}"/>

                                        <DataGridTemplateColumn Header="Bearbeiten" Width="80">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
