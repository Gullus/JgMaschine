                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type data:tabAnmeldungMaschine}">
                    <StackPanel Orientation="Horizontal" Margin="1">
                        <Image Source="Bilder\JgPerson.png" />
                        <TextBlock Text="{Binding ZeitAngemeldet, StringFormat={}{0:'['hh':'mm'] '}}" />
